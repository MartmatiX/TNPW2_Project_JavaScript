<%- include("requires/header") %>
<main data-aos="zoom-in" data-aos-duration="1000">
    <section>
        <div class="d-flex w-50 flex-column">
            <div>
                <h2><%= user.name %></h2>
                <h2><%= user.surname %></h2>
                <h2><%= user.username %></h2>
                <h2><%= user.email %></h2>
                <hr>
            </div>
            <div class="pt-5">
                <form action="profile/logout" method="post">
                    <input type="submit" value="Log out" class="btn btn-danger ps-3 pe-3">
                </form>
            </div>
        </div>
        <div>
            <div class="d-flex flex-column w-50">
                <img src="/images/profile_image.svg" class="w-100">
            </div>
        </div>
    </section>
</main>    
<%- include("requires/footer") %>